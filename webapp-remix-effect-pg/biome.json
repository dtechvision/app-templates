{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error",
        "noConstantCondition": "error",
        "noUndeclaredVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noDoubleEquals": "error",
        "noConsoleLog": "warn",
        "noEmptyInterface": "error"
      },
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "error",
        "useDefaultParameterLast": "error",
        "noUselessElse": "error"
      },
      "complexity": {
        "noForEach": "error",
        "noBannedTypes": "error"
      },
      "a11y": {
        "useButtonType": "error",
        "useKeyWithClickEvents": "error",
        "useValidAnchor": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": ["build/**", "public/build/**", ".cache/**", "node_modules/**"]
  }
}
